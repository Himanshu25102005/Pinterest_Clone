<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create A New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input
                class="  block w-1/3 px-3 py-2 border-2 border-white bg-white text-black rounded-md mt-2 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-red-700 file:text-white hover:file:bg-red-800"
                type="file" name="postImage" />
            <input class=" text-black block w-1/3 px-3 py-2 border-2  mt-2 bg-white " type="text" placeholder="title"
                name="title">
            <textarea class=" text-black block w-1/3 h-60 px-3 py-2 border-2  mt-2 bg-white" type="text"
                placeholder="Description" name="description"></textarea>
            <input class= "block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700" type="submit"
                value="Create Post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>