<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% for (let i=0; i < posts.length; i++) { %>
                <div class="card w-32">
                    <div class="w-full h-40 rounded-lg bg-sky-200 overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= posts[i].image %>"
                            class="w-full h-full object-cover" />
                    </div>
                    <h5 class="mt-2 text-sm">
                        <%= posts[i].title %>
                    </h5>
                    <h6 class="text-xs opacity-500">@<%=posts[i].user.username%></h6>
                </div>
                <% } %>

        </div>
    </div>

    <% include ./partials/footer.ejs %>