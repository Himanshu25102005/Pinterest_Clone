<% include ./partials/header.ejs %>

    <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
        <div class="w-[23vw] bg-white px-20 py-10 rounded-[30px]">
            <div class="w-full my-[5px] flex align-center justify-center">
                <img class=" w-[40px] h-[40px]"
                    src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt="">
            </div>
            <h1 class="text-3xl mb-5 text-center font-semibold text-zinc-700 tracking-tight capitalize leading none">
                Create
                New Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-md w-full mt-2 px-3 py-2" type="text" name="username"
                    placeholder="Username">
                <input class="border-2 rounded-md w-full mt-2 px-3 py-2" type="text" name="name"
                    placeholder="Fullname">
                <input class="border-2 rounded-md w-full mt-2 px-3 py-2" type="password" name="password"
                    placeholder="Password">
                <input class="border-2 rounded-md w-full mt-2 px-3 py-2" type="email" name="email" placeholder="Email">
                <input class="border-2 rounded-md w-full mt-2 px-3 py-2" type="number" name="contact"
                    placeholder="Contact">
                <input class="rounded-full w-full mt-2 px-3 py-2 bg-red-600 text-white rounded-full mt-5" type="submit"
                    value="Create New Account">
                <p class="text-xs font-semibold text-zinc-700 mt-9 text-center w-2/3 mx-auto">By continuing, you agree
                    to Pinterest’s Terms of Service and acknowledge you’ve read our Privacy Policy, Notice at
                    collection.</p>
            </form>
            <a href="/" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Login Existing
                Account</a>
        </div>
    </div>


    <% include ./partials/footer.ejs %>